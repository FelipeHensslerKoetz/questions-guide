<%- include('partials/header') %>

<body>
  <%- include('partials/navbar') %>
  <div class="container">
    <hr />
    <h1>Questions:</h1>
    <hr />
    <a href="/ask" class="btn btn-primary">Ask something</a>
    <hr />
    <% questions.forEach(question => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <h3><%= question.title %></h3>
      </div>

      <div class="card-footer">
        <a href="/question/<%= question.id %>" class="btn btn-primary">Reply</a>
      </div>
    </div>
    <% }) %>
  </div>
</body>

<%- include('partials/footer') %>
